    "vercel": "yarn workspace @sv/nextjs vercel",
    "vercel:yolo": "yarn workspace @sv/nextjs vercel:yolo"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "dependencies": {
    "yarn": "^1.22.22"
  }
